FoamFile
{
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    xMin
    {
        type            fixedValue;
        value           uniform 0;
    }

    xMax
    {
        type            zeroGradient;
    }

    yMin
    {
        type            zeroGradient;
    }

    yMax
    {
        type            slip;
    }

    frontAndBack
    {
        type            empty;
    }
}

